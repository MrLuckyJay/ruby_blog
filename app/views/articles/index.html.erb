<div class="row">
    <div class="col">
        <div class="col-md-10 offset-md-1">

            <p style="text-align: center; padding-top:10vh;"> <%= link_to "Home", root_path, class:"btn btn-primary btn-lg" %></p>
            <hr>


            <h1>List of Articles</h1><hr>

            <div class="row" style="margin-left: 26vh; margin-bottom:10vh;"> 
                    <%= link_to  "Create New Article", new_article_path, class:"btn btn-info btn-lg" %> 
            </div>
            
            <% @articles.each do |article| %>

            <div class="card col-md-8 offset-md-2" style="margin-bottom:5vh;">
                    
                <div class="card-body">
                  <h2 class="card-title"><%= article.title %></h2><hr>
                  <p class="card-text"><%= truncate(article.text, length:100)%></p><hr>


                    <%= link_to  "Read More", article_path(article),class:'btn btn-success btn-sm' %> 
                   | <%= link_to  "Edit", edit_article_path(article),class:'btn btn-primary btn-sm' %> |
                   <%= link_to  "Delete", article_path(article),method: :delete, data: {confirm: "Are you sure ? ? ?"}, class:'btn btn-danger btn-sm' %>  
                </div>

               
              </div>
                   



                
              <% end %>
        

        </div>
    </div>
</div>